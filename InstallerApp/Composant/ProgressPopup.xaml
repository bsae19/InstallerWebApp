<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InstallerApp.Composant.ProgressPopup"
             Title="ProgressPopup">
    <Grid VerticalOptions="Center" HorizontalOptions="Center" RowSpacing="35" Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ActivityIndicator IsRunning="True" Color="Blue" WidthRequest="50" HeightRequest="50" Grid.Row="0"/>
        <Label x:Name="lblStatus" Text="Installation en cours..." FontSize="18" HorizontalTextAlignment="Center" Grid.Row="1"/>
    </Grid>
</ContentPage>