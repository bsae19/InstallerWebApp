<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InstallerApp.Composant.Installation">
    <VerticalStackLayout
Spacing="80"
Padding="0,20,25,20"
VerticalOptions="Center"
HorizontalOptions="Center">
        <Label 
            Text="Choisissez la technologie"
            FontSize="Title"
            Style="{StaticResource Headline}"
            SemanticProperties.HeadingLevel="Level1"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <HorizontalStackLayout Spacing="50"
            VerticalOptions="Center"
            HorizontalOptions="Center">
            <Button Text="React" FontSize="Title" Clicked="Button_Node" />
            <Button Text="PHP" FontSize="Title" Clicked="Button_PHP"/>
            <Button Text="Python" FontSize="Title" Clicked="Button_Python"/>
        </HorizontalStackLayout>
        <Button
Text="Retour" 
FontSize="Title" 
                VerticalOptions="Center" HorizontalOptions="Center"
Clicked="Button_Retour"/>
    </VerticalStackLayout>
</ContentView>
