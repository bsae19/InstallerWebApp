<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InstallerApp.Composant.Page"
             Title="Page"
             BackgroundImageSource="fond.png">
    <VerticalStackLayout
    VerticalOptions="Center"
    HorizontalOptions="Center">
        <!-- Apply rounded corners using Frame -->
        <Frame BackgroundColor="#202020" 
           CornerRadius="20" 
           HasShadow="True" x:Name="Frame">
        </Frame>
    </VerticalStackLayout>
</ContentPage>